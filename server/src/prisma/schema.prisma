datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id Int @id @default(autoincrement())
    
    email String @unique
    password String
    name String?
    boards Board[]
}

model Board {
    id Int @id @default(autoincrement())

    title String @unique
    stages Stage[]

    user User @relation(fields: [userId], references: [id])
    userId Int
}

model Stage {
    id Int @id @default(autoincrement())

    title String
    tasks Task[]

    board Board @relation(fields: [boardId], references: [id])
    boardId Int
}

model Task {
    id Int @id @default(autoincrement())

    title String
    description String

    stage Stage @relation(fields: [stageId], references: [id])
    stageId Int
}